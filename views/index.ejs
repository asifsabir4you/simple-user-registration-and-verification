<% include partials/header %>

<form method="POST" action="/users/search" 
style="background-color:grey;color:white;border-left:5px solid red;
	padding:5px;border-radius:5px;margin:auto;text-align:center;">
	<h1> Search a customer </h1>

	<input type="text" name = "search_first_name"
	placeholder="enter users first name" style="color:black;">
	<br>
	<input type= "submit" value  = "Search" style="color:black;">
</form>

<br><br>


<form method="POST" action="/users/add" 
style="background-color:grey;color:white;
border-left:5px solid red;
	padding:5px;border-radius:5px;margin:auto;text-align:center;">
	<h1> Add Customer </h1>

	<label>First Name</label>
	<input type="text" name = "first_name" placeholder="Robert" style="color:black;">
	<br>
	<label>Last Name</label>
	<input type="text" name = "last_name" style="color:black;"
	placeholder="Bryce">
	<br>
	<label>Email</label>
	<input type="text" name = "email" style="color:black;"
	placeholder="example@example.com">
	<br><br>
	<input type= "submit" value  = "submit" style="color:black;">
</form>
<br><br><br>
 <div 
 style="padding:8px;width:70%;margin:auto;text-align:center;">
<h1>Current <%= title %> </h1>


<table class="table table-striped">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
    <% users.forEach(function(user){ %>

      <tr>
        <td><%= user.first_name%></td>
        <td><%= user.last_name  %></td>
        <td><%= user.email  %></td>
        <td><a href="#" style="background-color:red;text-decoration:none;
				border-left:3px solid white;padding-left:5px;
			  	padding:3px; color:white;float:right;" class="deleteUser"
			  	data-id="<%= user._id%>" >
			  	DELETE</a>
			  	</td>
      </tr>



		 <% }) %>
   	</tbody>
 </table>

</div>

	
	<% include partials/footer %>